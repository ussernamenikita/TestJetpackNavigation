<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.navigationtest.LoginFragment">
        <action
            android:id="@+id/action_login_to_main_flow"
            app:destination="@id/mainFlowFragment" />

    </fragment>
    <fragment
        android:id="@+id/mainFlowFragment"
        android:name="com.example.navigationtest.MainFlowFragment" >
        <action android:id="@+id/action_main_flow_to_rates"
            app:destination="@+id/ratesFragment"
            app:popUpTo="@id/mainFlowFragment"
            app:popUpToInclusive="false"
            />
    </fragment>

    <fragment
        android:id="@+id/ratesFragment"
        android:name="com.example.navigationtest.RatesFragment">
    </fragment>

</navigation>